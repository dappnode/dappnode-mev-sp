{
  "name": "Dappnode-SmoothingPool",
  "description": "Smoothing pool dappnode",
  "version": "0.1",
  "author": "Dappnode",
  "license": "pending",
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "^2.5.1",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "@openzeppelin/test-helpers": "^0.5.16",
    "chai": "^4.3.10",
    "dotenv": "^8.6.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-mocha": "^9.0.0",
    "hardhat": "^2.22.3",
    "merkletreejs": "^0.3.10",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solc-0.8": "npm:solc@^0.8.21",
    "hardhat-dependency-compiler": "^1.1.3"
  },
  "scripts": {
    "docgen": "npx solidity-docgen --solc-module solc-0.8 -t ./docs/templates",
    "lint": "npx eslint ./test && npx eslint ./deployment",
    "lint:fix": "npx eslint ./test --fix && npx eslint ./deployment --fix",
    "deploy:hardhat": "npx hardhat run deployment/deployDappnodeSmoothingPool.js --network hardhat",
    "deploy:holesky": "npx hardhat run deployment/deployDappnodeSmoothingPool.js --network holesky",
    "verify:holesky": "npx hardhat run deployment/verifyDappnodeSmoothingPool.js --network holesky",
    "upgrade:holesky": "npx hardhat run upgrade/simpleUpgrade.js --network holesky",
    "deploy:mainnet": "npx hardhat run deployment/deployDappnodeSmoothingPool.js --network mainnet",
    "verify:mainnet": "npx hardhat run deployment/verifyDappnodeSmoothingPool.js --network mainnet",
    "upgrade:mainnet": "npx hardhat run upgrade/simpleUpgrade.js --network mainnet",
    "coverage": "npx hardhat coverage",
    "gas:report": "REPORT_GAS=true npx hardhat test",
    "gas:report:file": "REPORT_GAS=true REPORT_GAS_FILE=true npx hardhat test"
  }
}
